{
    "manifest_version": 3,
    "name": "67 Goon Corner Extension",
    "version": "1.1",
    "description": "Highlights every instance of 67 and adds a Goon Corner to the webpage",
    "icons": {
        "16": "logo-16.png",
        "32": "logo-32.png",
        "48": "logo-48.png",
        "128": "logo-128.png"
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js",
                "popup-injector.js"
            ],
            "css": [
                "highlight.css",
                "popup.css"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "popup.html",
                "popup-mini.html",
                "popup.css",
                "subwaysurfers.mp4",
                "gooncorner.png"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "action": {
        "default_title": "Sybau",
        "default_icon": {
            "16": "logo-16.png",
            "32": "logo-32.png"
        }
    }
}